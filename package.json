{
  "name": "@hauptmedia/zeebe-exporter-types",
  "version": "0.0.1",
  "description": "Typescript type definitions for JSON encoded export data used by the Zeebe Workflow Automation Engine.",
  "author": {
    "name": "Julian Haupt",
    "email": "julian@haupt.media"
  },
  "type": "module",
  "module": "build/module/index.js",
  "repository": "https://github.com/hauptmedia/zeebe-exporter-types",
  "license": "Apache-2.0",
  "keywords": [
    "zeebe",
    "zeebe.io",
    "microservices",
    "orchestration",
    "bpmn",
    "Camunda",
    "automation",
    "process",
    "workflow",
    "exporter",
    "protocol"
  ],
  "scripts": {
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "doc": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "prettier": "^2.1.1",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
